	/*
	|| EXCEPTIONS DU CODE D'INITIALISATION
	*/

END [@ELEMENT_NAME@];

DROP PUBLIC SYNONYM [@ELEMENT_NAME@]
/

CREATE PUBLIC SYNONYM [@ELEMENT_NAME@] FOR [@ELEMENT_NAME@]
/

GRANT ALL ON [@ELEMENT_NAME@] TO Developper
/

GRANT EXECUTE ON [@ELEMENT_NAME@] TO Appli_User
/

