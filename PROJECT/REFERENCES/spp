END [@ELEMENT_NAME@];

CREATE OR REPLACE PACKAGE BODY [@ELEMENT_NAME@]
IS
	--#-< Déclaration des types >-########-----------------
	--#-< Déclaration des variables >-########-------------
	--#-< Ecriture des curseurs >-########-----------------
